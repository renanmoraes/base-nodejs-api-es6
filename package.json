{
  "name": "basic_express_api_structure",
  "version": "1.0.0",
  "description": "Basic strcuture for REST API with ExpressJS",
  "main": "src/app.js",
  "scripts": {
    "dev": "export NODE_ENV='development' && nodemon --exec babel-node src/app.js --use_strict",
    "start": "export NODE_ENV='production' && pm2 start dist/app.js --name='api_name'",
    "stop": "pm2 stop 'api_name'",
    "test": "export NODE_ENV='test' && mocha src/tests/ --compilers js:babel-core/register --recursive",
    "clean": "rm -rf dist && mkdir dist",
    "build": "npm run clean && babel ./src -d ./dist --copy-files"
  },
  "author": "Tales Luna <tales.ferreira.luna@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "assert": "^1.4.1",
    "babel-cli": "^6.24.1",
    "babel-preset-es2015": "^6.24.1",
    "mocha": "^3.4.2",
    "nodemon": "^1.11.0",
    "supertest": "^3.0.0"
  },
  "dependencies": {
    "body-parser": "^1.17.2",
    "express": "^4.15.3",
    "joi": "^10.5.2",
    "morgan": "^1.8.2"
  }
}
